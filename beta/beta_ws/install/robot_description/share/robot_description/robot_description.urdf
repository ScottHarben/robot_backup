<?xml version="1.0"?>
<robot name="beta" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="channel_height" value="0.048"/>

  <xacro:property name="base_length" value="0.240"/>
  <xacro:property name="base_width" value="0.240"/>
  <xacro:property name="base_height" value="${channel_height * 3}"/>

  <xacro:property name="wheel_radius" value="0.060"/>
  <xacro:property name="wheel_width" value="0.028"/>
  <xacro:property name="wheel_gap" value="0.018"/>

  <xacro:property name="tower_length" value="0.048"/>
  <xacro:property name="tower_width" value="0.048"/>
  <xacro:property name="tower_height" value="0.192"/>

  <xacro:property name="camera_length" value="0.025"/>
  <xacro:property name="camera_width" value="0.090"/>
  <xacro:property name="camera_height" value="0.025"/>
  <xacro:property name="mount_thickness" value="0.003"/>
  <xacro:property name="mount_offset" value="0.03334"/>

  <xacro:property name="imu_side" value="0.016"/>
  <xacro:property name="imu_height" value="0.001"/>


  <link name="base_link">
    <visual>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="tangerine">
        <color rgba="1.0 0.5803921568627451 0.03137254901960784 1.0" />
      </material>
    </visual>
  </link>
  
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 ${-(base_height / 2 + channel_height)}" rpy="0 0 0"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="wheel_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="${(base_length / 2) - (channel_height / 2)} ${((base_width / 2) + wheel_gap + (wheel_width / 2)) * -1} ${-wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="wheel_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="${(base_length / 2) - (channel_height / 2)} ${((base_width / 2) + wheel_gap + (wheel_width / 2))} ${-wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_back_link">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="wheel_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_back_link"/>
    <origin xyz="${((base_length / 2) + wheel_gap + (wheel_width / 2)) * -1} 0 ${-wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

<!-- 
  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${imu_side} ${imu_side} ${imu_height}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="${(base_length / 2) - (chassis_height / 2)} 0 ${wheel_radius - (chassis_height / 2) - imu_height}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint> 
-->

  <link name="tower_link">
    <visual>
      <geometry>
        <box size="${tower_length} ${tower_width} ${tower_height}"/>
      </geometry>
      <material name="tangerine">
        <color rgba="1.0 0.5803921568627451 0.03137254901960784 1.0" />
      </material>
    </visual>
  </link>
  
  <joint name="tower_joint" type="fixed">
    <parent link="base_link"/>
    <child link="tower_link"/>
    <origin xyz="${-((base_length / 2) - (channel_height / 2))} 0 ${base_height / 2 + tower_height / 2}" rpy="0 0 0"/>
  </joint>

  <link name="camera_link">
    <visual>
      <geometry>
        <box size="${camera_length} ${camera_width} ${camera_height}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="tower_link"/>
    <child link="camera_link"/>
    <origin xyz="${((channel_height / 2) + mount_thickness + (camera_length / 2))} 0 ${(tower_height / 2) - (channel_height / 2) + mount_offset}" rpy="0 0 0"/>
  </joint>

</robot>



