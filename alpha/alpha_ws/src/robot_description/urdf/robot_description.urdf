<?xml version="1.0"?>
<robot name="nano" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="chassis_height" value="0.048"/>
  <xacro:property name="spacer_height" value="0.043"/>
  <xacro:property name="plate_height" value="0.00635"/>
  <xacro:property name="bumper_length" value="0.048"/>

  <xacro:property name="base_width" value="0.288"/>
  <xacro:property name="base_length" value="0.192"/>
  <xacro:property name="base_height" value="${chassis_height + (spacer_height * 2) + (plate_height * 3)}"/>

  <xacro:property name="wheel_x_gap" value="0.020"/>
  <xacro:property name="wheel_y_gap" value="0.009"/>
  <xacro:property name="wheel_radius" value="0.060"/>
  <xacro:property name="wheel_x_width" value="0.020"/>
  <xacro:property name="wheel_y_width" value="0.032"/>

  <xacro:property name="base_z_off" value="${wheel_radius - (chassis_height / 2) + (base_height / 2)}"/>

  <xacro:property name="laser_height" value="0.055"/>
  <xacro:property name="laser_diameter" value="0.070"/>
  <xacro:property name="laser_from_top" value="0.010"/>

  <xacro:property name="imu_side" value="0.016"/>
  <xacro:property name="imu_height" value="0.001"/>

  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 ${base_z_off}" rpy="0 0 0"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="tangerine">
        <color rgba="1.0 0.5803921568627451 0.03137254901960784 1.0" />
      </material>
    </visual>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="bumper_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${bumper_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="tangerine">
        <color rgba="1.0 0.5803921568627451 0.03137254901960784 1.0" />
      </material>
    </visual>
  </link>

  <joint name="bumper_joint" type="fixed">
    <parent link="base_link"/>
    <child link="bumper_link"/>
    <origin xyz="${(base_length / 2) + (bumper_length / 2)} 0 ${base_z_off}" rpy="0 0 0"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_y_width}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="wheel_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="${(base_length / 2) - (chassis_height / 2)} ${((base_width / 2) + wheel_y_gap + (wheel_y_width / 2)) * -1} ${wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_y_width}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="wheel_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="${(base_length / 2) - (chassis_height / 2)} ${((base_width / 2) + wheel_y_gap + (wheel_y_width / 2))} ${wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_back_link">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_x_width}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="wheel_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_back_link"/>
    <origin xyz="${((base_length / 2) + wheel_x_gap + (wheel_x_width / 2)) * -1} 0 ${wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${imu_side} ${imu_side} ${imu_height}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="${(base_length / 2) - (chassis_height / 2)} 0 ${wheel_radius - (chassis_height / 2) - imu_height}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="laser_link">
    <visual>
      <origin xyz="0 0 ${((laser_height / 2) - laser_from_top) * -1}" rpy="0 0 0"/>
      <geometry>
          <cylinder radius="${laser_diameter / 2}" length="${laser_height}"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="${(base_length / 2) - (chassis_height / 2)} 0 ${(base_height / 2) + base_z_off + (laser_height - laser_from_top)}" rpy="0 0 ${pi}"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>



